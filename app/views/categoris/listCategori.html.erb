<h3>Séléctionner une categories</h3>

<table>
  <tr>
    <th>Categories</th>
  </tr>

<% @categoris.each do |categori| %>
  <tr>
    <td><%= categori.nom %></td>
   
     <td><%= link_to "Visualiser Produit", {:controller => "categoris", :action => "listProduit", :categori => categori}%></td>
  </tr>
<% end %>
</table>

<br/>

<% form_tag( :controller => "categoris" , :action => "index") do %>

		 <%= text_field_tag(:arg1, params[:arg1], :size => 5) %> &times
		
		<%= submit_tag :"recherche" %>
<% end %>