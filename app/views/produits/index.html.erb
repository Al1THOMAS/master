<h1>Listing produits</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Prix</th>
    <th>Description</th>
    <th>Photo</th>
    <th>Categori</th>
    <th>Quantite</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @produits.each do |produit| %>
  <tr>
    <td><%= produit.nom %></td>
    <td><%= produit.prix %></td>
    <td><%= produit.description %></td>
    <td><%= produit.photo %></td>
    <td><%= produit.categori_id %></td>
    <td><%= produit.quantite %></td>
    <td><%= link_to 'Show', produit %></td>
    <td><%= link_to 'Edit', edit_produit_path(produit) %></td>
    <td><%= link_to 'Destroy', produit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

