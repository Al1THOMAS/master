<h3>Liste commandes</h3>

<table>
  <tr>
    <th align='center'>Produit</th>
    <th align='center'>Commander</th>
  </tr>

<% @commandes.each do |commande| %>
  <tr>
    <!-- afficher commande effectuer -->
    <td align='center'><%= Produit.find_by_id(commande.produit_id).nom %></td>
    
    <td align='center'><% if commande.payer %>
             <%=  "Effectuer" %>
            <% else %>
               <%=  "En attente" %>
        <% end %>
    </td>
    
  </tr>
<% end %>
</table>
<br/>
<%= link_to "Retour", {:controller => "commandes", :action => "mesAchat"}%>