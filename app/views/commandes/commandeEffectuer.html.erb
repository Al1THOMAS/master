<h3>Liste des commandes</h3>

<table>
  <tr>
    <th align='center'>Produit</th>
    <th align='center'>Client</th>
    <th align='center'>Payement</th>
    <th align='center'></th>
  </tr>

<% @commandes.each do |commande| %>
  <tr>
    <td align='center'><%= Produit.find_by_id(commande.produit_id).nom %></td>
    <td align='center'><%= User.find_by_id(commande.user_id).username %></td>
    
      <td align='center'>
        <% if commande.payer%>
          <%= "Effectuer"%>
        <%  else %>
          <%= "en Attente"%>
        <% end %>
      </td>
      <td align='center'><%= link_to "Supprimer", {:controller => "commandes", :action => "destroy",:commande => commande}%></td>
  
  </tr>
<% end %>
</table>

<br />

