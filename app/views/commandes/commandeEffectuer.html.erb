<h1>Listing commandes</h1>

<table>
  <tr>
    <th>Produit</th>
    <th>Client</th>
    <th>Payement</th>
  </tr>

<% @commandes.each do |commande| %>
  <tr>
    <td><%= Produit.find_by_id(commande.produit_id).nom %></td>
    <td><%= User.find_by_id(commande.user_id).username %></td>
    <% if commande.payer==true %>
      <td>Effectuer</td>
    <% end %>
    <td><%= link_to 'Show', commande %></td>
    <td><%= link_to 'Edit', edit_commande_path(commande) %></td>
    <td><%= link_to 'Destroy', commande, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

