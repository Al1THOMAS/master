<h1>Listing commandes</h1>

<table>
  <tr>
    <th align='center'>Produit</th>
    <th align='center'>User</th>
    <th align='center'>Payer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @commandes.each do |commande| %>
  <tr>
    <td align='center'><%= Produit.find_by_id(commande.produit_id).nom %></td>
    <td align='center'><%= User.find_by_id(commande.user_id).username %></td>
    <td align='center'><%= commande.payer %></td>
    <td align='center'><%= link_to 'Show', commande %></td>
    <td align='center'><%= link_to 'Edit', edit_commande_path(commande) %></td>
    <td align='center'><%= link_to 'Destroy', commande, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

